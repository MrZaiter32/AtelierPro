@using Microsoft.AspNetCore.Identity
@using AtelierPro.Data
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AtelierPro</a>
        <div class="d-flex align-items-center">
            <AuthorizeView>
                <Authorized>
                    <div class="dropdown me-3">
                        <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="oi oi-person me-2"></span>@CurrentUser?.NombreCompleto
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" href="/perfil">Mi Perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/auth/logout">Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a href="/auth/login" class="btn btn-sm btn-outline-primary me-2">Iniciar Sesión</a>
                    <a href="/auth/register" class="btn btn-sm btn-outline-success">Registrarse</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized Context="authContext">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="counter">
                        <span class="oi oi-plus" aria-hidden="true"></span> Counter
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="fetchdata">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                    </NavLink>
                </div>

                <div class="nav-divider"></div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="erp">
                        <span class="oi oi-briefcase" aria-hidden="true"></span> ERP Dashboard
                    </NavLink>
                </div>

                @if (authContext.User.IsInRole("Admin") || authContext.User.IsInRole("Finanzas") || authContext.User.IsInRole("Taller"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="presupuestos">
                            <span class="oi oi-document" aria-hidden="true"></span> Presupuestos
                        </NavLink>
                    </div>
                }

                @if (authContext.User.IsInRole("Admin") || authContext.User.IsInRole("Finanzas") || authContext.User.IsInRole("Cliente"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="crm/clientes">
                            <span class="oi oi-people" aria-hidden="true"></span> Clientes
                        </NavLink>
                    </div>
                }

                <div class="nav-divider"></div>

                @* MÓDULO TALLER *@
                @if (authContext.User.IsInRole("Admin") || authContext.User.IsInRole("Finanzas") || authContext.User.IsInRole("Taller"))
                {
                    <div class="nav-module px-3">
                        <button class="btn btn-link nav-module-header w-100 text-start p-2" @onclick='() => ToggleModule("taller")' type="button">
                            <span class="oi oi-wrench me-2" aria-hidden="true"></span>
                            <span class="module-title">Taller</span>
                            <span class="float-end">
                                <span class="@($"oi {(ExpandedModules.Contains("taller") ? "oi-chevron-bottom" : "oi-chevron-right")}")" aria-hidden="true"></span>
                            </span>
                        </button>
                        @if (ExpandedModules.Contains("taller"))
                        {
                            <div class="nav-submenu ps-3">
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="taller/ordenes">
                                        <span class="oi oi-list me-2" aria-hidden="true"></span> Órdenes de Reparación
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="taller/calendario">
                                        <span class="oi oi-calendar me-2" aria-hidden="true"></span> Calendario
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="taller/tecnicos">
                                        <span class="oi oi-person me-2" aria-hidden="true"></span> Técnicos
                                    </NavLink>
                                </div>
                            </div>
                        }
                    </div>
                }

                @* MÓDULO ALMACÉN *@
                @if (authContext.User.IsInRole("Admin") || authContext.User.IsInRole("Finanzas") || authContext.User.IsInRole("Taller"))
                {
                    <div class="nav-module px-3">
                        <button class="btn btn-link nav-module-header w-100 text-start p-2" @onclick='() => ToggleModule("almacen")' type="button">
                            <span class="oi oi-box me-2" aria-hidden="true"></span>
                            <span class="module-title">Almacén</span>
                            <span class="float-end">
                                <span class="@($"oi {(ExpandedModules.Contains("almacen") ? "oi-chevron-bottom" : "oi-chevron-right")}")" aria-hidden="true"></span>
                            </span>
                        </button>
                        @if (ExpandedModules.Contains("almacen"))
                        {
                            <div class="nav-submenu ps-3">
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="almacen/refacciones">
                                        <span class="oi oi-spreadsheet me-2" aria-hidden="true"></span> Refacciones
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="almacen/movimientos">
                                        <span class="oi oi-arrow-right me-2" aria-hidden="true"></span> Movimientos
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="almacen/cuentos">
                                        <span class="oi oi-clipboard me-2" aria-hidden="true"></span> Cuentos Físicos
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="almacen/alertas">
                                        <span class="oi oi-warning me-2" aria-hidden="true"></span> Alertas
                                    </NavLink>
                                </div>
                            </div>
                        }
                    </div>
                }

                @* MÓDULO COMPRAS *@
                @if (authContext.User.IsInRole("Admin") || authContext.User.IsInRole("Finanzas"))
                {
                    <div class="nav-module px-3">
                        <button class="btn btn-link nav-module-header w-100 text-start p-2" @onclick='() => ToggleModule("compras")' type="button">
                            <span class="oi oi-cart me-2" aria-hidden="true"></span>
                            <span class="module-title">Compras</span>
                            <span class="float-end">
                                <span class="@($"oi {(ExpandedModules.Contains("compras") ? "oi-chevron-bottom" : "oi-chevron-right")}")" aria-hidden="true"></span>
                            </span>
                        </button>
                        @if (ExpandedModules.Contains("compras"))
                        {
                            <div class="nav-submenu ps-3">
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="compras/proveedores">
                                        <span class="oi oi-truck me-2" aria-hidden="true"></span> Proveedores
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="compras/ordenes">
                                        <span class="oi oi-cart me-2" aria-hidden="true"></span> Órdenes de Compra
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="compras/registro">
                                        <span class="oi oi-book me-2" aria-hidden="true"></span> Requisiciones
                                    </NavLink>
                                </div>
                                <div class="nav-item px-3">
                                    <NavLink class="nav-link" href="compras/crear-orden">
                                        <span class="oi oi-plus me-2" aria-hidden="true"></span> Crear Orden
                                    </NavLink>
                                </div>
                            </div>
                        }
                    </div>
                }

                @if (authContext.User.IsInRole("Admin"))
                {
                    <div class="nav-divider"></div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/usuarios">
                            <span class="oi oi-key" aria-hidden="true"></span> Administración
                        </NavLink>
                    </div>
                }
            </Authorized>
            <NotAuthorized Context="authContext">
                <div class="nav-item px-3">
                    <a href="/auth/login" class="nav-link">
                        <span class="oi oi-account-login me-2" aria-hidden="true"></span> Iniciar Sesión
                    </a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private ApplicationUser? CurrentUser;
    private HashSet<string> ExpandedModules = new() { "taller" };

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user?.Identity?.IsAuthenticated == true)
        {
            CurrentUser = await UserManager.FindByEmailAsync(user.Identity.Name ?? string.Empty);
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleModule(string moduleName)
    {
        if (ExpandedModules.Contains(moduleName))
            ExpandedModules.Remove(moduleName);
        else
            ExpandedModules.Add(moduleName);
    }
}
