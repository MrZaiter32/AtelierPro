@page "/auth/logout"
@using Microsoft.AspNetCore.Identity
@using AtelierPro.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">Cerrar Sesión</h3>
                </div>
                <div class="card-body text-center">
                    @if (IsLoading)
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cerrando sesión...</span>
                        </div>
                        <p class="mt-3">Por favor espere mientras se cierra su sesión...</p>
                    }
                    else
                    {
                        <p class="lead">¿Está seguro de que desea cerrar sesión?</p>
                        <button class="btn btn-danger me-2" @onclick="ConfirmLogout">Sí, cerrar sesión</button>
                        <button class="btn btn-secondary" @onclick="Cancel">Cancelar</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool IsLoading = false;

    protected override Task OnInitializedAsync()
    {
        // El usuario ya está autenticado si llegó aquí
        // La página se muestra después del redirect
        return Task.CompletedTask;
    }

    private async Task ConfirmLogout()
    {
        IsLoading = true;
        await SignInManager.SignOutAsync();
        NavigationManager.NavigateTo("/auth/login", forceLoad: true);
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }
}
