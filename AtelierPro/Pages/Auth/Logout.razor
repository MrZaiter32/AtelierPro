@page "/auth/logout"
@using AtelierPro.Services
@attribute [Authorize]
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">Cerrar Sesión</h3>
                </div>
                <div class="card-body text-center">
                    @if (IsLoading)
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cerrando sesión...</span>
                        </div>
                        <p class="mt-3">Por favor espere...</p>
                    }
                    else
                    {
                        <p class="lead">¿Está seguro?</p>
                        <button class="btn btn-danger me-2" @onclick="ConfirmLogout">Sí, cerrar sesión</button>
                        <button class="btn btn-secondary" @onclick="Cancel">Cancelar</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool IsLoading = false;

    protected override async Task OnInitializedAsync()
    {
        // Auto-logout si viene directamente a esta página sin confirmación previa
        // El usuario debe estar autenticado (protegido por [Authorize])
        await base.OnInitializedAsync();
    }

    private async Task ConfirmLogout()
    {
        IsLoading = true;
        try
        {
            var (exitoso, mensaje) = await AuthService.LogoutAsync();
            
            if (exitoso)
            {
                // Redirigir al login con forceLoad para refrescar sesión
                NavigationManager.NavigateTo("/auth/login", forceLoad: true);
            }
            else
            {
                // En caso de error, mostrar y permitir reintentar
                IsLoading = false;
            }
        }
        catch (Exception ex)
        {
            IsLoading = false;
        }
    }

    private void Cancel()
    {
        // Volver al home si cancela el logout
        NavigationManager.NavigateTo("/");
    }
}