@page "/auth/logout"
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">Cerrar Sesión</h3>
                </div>
                <div class="card-body text-center">
                    @if (IsLoading)
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cerrando sesión...</span>
                        </div>
                        <p class="mt-3">Por favor espere...</p>
                    }
                    else
                    {
                        <p class="lead">¿Está seguro?</p>
                        <button class="btn btn-danger me-2" @onclick="ConfirmLogout">Sí, cerrar sesión</button>
                        <button class="btn btn-secondary" @onclick="Cancel">Cancelar</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool IsLoading = false;

    private async Task ConfirmLogout()
    {
        IsLoading = true;
        NavigationManager.NavigateTo("/api-auth/logout", forceLoad: true);
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }
}