@page "/auth/login"
@using System.ComponentModel.DataAnnotations
@using AtelierPro.Services
@attribute [AllowAnonymous]
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject BusyService Busy

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <span class="oi oi-lock-locked me-2"></span>
                        Iniciar Sesión
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ErrorMessage
                            <button type="button" class="btn-close" @onclick="ClearError"></button>
                        </div>
                    }

                    <EditForm Model="modelo" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText type="email" id="email" class="form-control" placeholder="usuario@atelierpro.com" 
                                   @bind-Value="modelo.Email" />
                            <ValidationMessage For="() => modelo.Email" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <InputText id="password" type="password" class="form-control" placeholder="••••••••" 
                                   @bind-Value="modelo.Contraseña" />
                            <ValidationMessage For="() => modelo.Contraseña" />
                        </div>

                        <div class="form-check mb-3">
                            <InputCheckbox class="form-check-input" id="rememberMe" 
                                   @bind-Value="modelo.Recordarme" />
                            <label class="form-check-label" for="rememberMe">
                                Recuérdame en este dispositivo
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" disabled="@IsLoading">
                            @if (IsLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Ingresando...</span>
                            }
                            else
                            {
                                <span class="oi oi-account-login me-2"></span>
                                <span>Iniciar Sesión</span>
                            }
                        </button>
                    </EditForm>

                    <hr />

                    <div class="text-center">
                        <p>¿No tienes cuenta? <a href="/auth/register" class="link-primary">Regístrate aquí</a></p>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center text-muted small">
                <p>AtelierPro ERP • v1.0</p>
                <p>Sistema de gestión para talleres de choque</p>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModelo modelo = new();
    private string ErrorMessage = string.Empty;
    private bool IsLoading = false;

    public class LoginModelo
    {
        [EmailAddress(ErrorMessage = "Email inválido")]
        [Required(ErrorMessage = "El email es requerido")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "La contraseña es requerida")]
        [StringLength(100, MinimumLength = 8, ErrorMessage = "La contraseña debe tener al menos 8 caracteres")]
        public string Contraseña { get; set; } = string.Empty;

        public bool Recordarme { get; set; }
    }

    private async Task HandleLogin()
    {
        IsLoading = true;
        ErrorMessage = string.Empty;

        try
        {
            using var _ = Busy.Start("Validando credenciales...");

            var (exitoso, mensaje) = await AuthService.LoginAsync(modelo.Email, modelo.Contraseña, modelo.Recordarme);

            if (exitoso)
            {
                NavigationManager.NavigateTo("/", forceLoad: true);
            }
            else
            {
                ErrorMessage = mensaje ?? "Error desconocido durante el login.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error inesperado: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ClearError() => ErrorMessage = string.Empty;
}