@page "/compras/ordenes"
@using System.Linq
@using AtelierPro.Data
@using AtelierPro.Models
@using AtelierPro.Services
@inject ComprasService ComprasService
@attribute [Authorize(Roles = "Admin,Finanzas")]

<PageTitle>Órdenes de Compra - AtelierPro</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>
                <span class="oi oi-cart"></span>
                Órdenes de Compra
            </h2>
        </div>
    </div>

    @if (cargando)
    {
        <div class="alert alert-info">
            <span class="spinner-border spinner-border-sm me-2"></span>
            Cargando órdenes...
        </div>
    }
    else if (error)
    {
        <div class="alert alert-danger">
            Error al cargar las órdenes de compra. Intenta más tarde.
        </div>
    }
    else if (ordenes == null || ordenes.Count == 0)
    {
        <div class="alert alert-warning">
            No hay órdenes de compra registradas.
        </div>
    }
    else
    {
        <table class="table table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>Número</th>
                    <th>Proveedor</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Subtotal</th>
                    <th>IVA</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orden in ordenes)
                {
                    <tr>
                        <td>@orden.Numero?.Substring(0, Math.Min(8, orden.Numero.Length))</td>
                        <td>@orden.Proveedor?.RazonSocial</td>
                        <td>@orden.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            @switch (orden.Estado)
                            {
                                case EstadoOrdenCompra.Generada:
                                    <span class="badge bg-secondary">Generada</span>
                                    break;
                                case EstadoOrdenCompra.Enviada:
                                    <span class="badge bg-info">Enviada</span>
                                    break;
                                case EstadoOrdenCompra.Parcial:
                                    <span class="badge bg-warning text-dark">Parcial</span>
                                    break;
                                case EstadoOrdenCompra.Recibida:
                                    <span class="badge bg-success">Recibida</span>
                                    break;
                                case EstadoOrdenCompra.Cancelada:
                                    <span class="badge bg-danger">Cancelada</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@orden.Estado</span>
                                    break;
                            }
                        </td>
                        <td>@orden.Subtotal.ToString("C")</td>
                        <td>@orden.Iva.ToString("C")</td>
                        <td><strong>@orden.Total.ToString("C")</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<OrdenCompra> ordenes = new();
    private bool cargando = true;
    private bool error = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            ordenes = (await ComprasService.ObtenerOrdenesCompraAsync()).ToList();
        }
        catch
        {
            error = true;
        }
        finally
        {
            cargando = false;
        }
    }
}
