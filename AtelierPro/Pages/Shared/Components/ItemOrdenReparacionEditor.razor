@using AtelierPro.Models

<div class="card mb-3">
    <div class="card-header bg-light">
        <div class="row align-items-center">
            <div class="col">
                <h6 class="mb-0">
                    <strong>Item</strong> - @Item.Codigo
                </h6>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-sm btn-danger" @onclick="OnRemove">
                    <span class="oi oi-trash"></span> Eliminar
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Código</label>
                    <input type="text" class="form-control" @bind="Item.Codigo" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <input type="text" class="form-control" @bind="Item.Descripcion" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Cantidad</label>
                    <input type="number" class="form-control" @bind.number="Item.Cantidad" min="1" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Precio Unitario</label>
                    <input type="number" class="form-control" @bind.number="Item.PrecioUnitario" min="0" step="0.01" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Tiempo Estimado (Hrs)</label>
                    <input type="number" class="form-control" @bind.number="Item.TiempoEstimadoHoras" min="0" step="0.5" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Tiempo Real (Hrs)</label>
                    <input type="number" class="form-control" @bind.number="Item.TiempoRealHoras" min="0" step="0.5" />
                </div>
            </div>
        </div>

        <div class="form-check mb-3 mt-2">
            <input type="checkbox" class="form-check-input" id="completado" @bind="Item.Completado" />
            <label class="form-check-label" for="completado">
                Marcar como Completado
            </label>
        </div>

        <div class="alert alert-info" role="alert">
            <strong>Subtotal:</strong> @((Item.Cantidad * Item.PrecioUnitario).ToString("C"))
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ItemOrdenReparacion Item { get; set; } = null!;

    [Parameter]
    public EventCallback OnItemRemoved { get; set; }

    private async Task OnRemove()
    {
        await OnItemRemoved.InvokeAsync();
    }
}
